<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recyler_view_background_color"


        tools:context=".StartGame_Activity">

        <Button
            android:id="@+id/startGameButtonID"
            android:layout_width="163dp"
            android:layout_height="59dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/login_button_shape"
            android:backgroundTint="#FBE9E7"
            android:text="@string/start_game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/startGametextViewID"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="@+id/startGametextViewID"
            app:layout_constraintTop_toBottomOf="@+id/startGametextViewID"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/startGametextViewID"
            android:layout_width="363dp"
            android:layout_height="47dp"
            android:layout_marginTop="284dp"
            android:gravity="center_horizontal"

            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>